<phpunit bootstrap="vendor/autoload.php">

    <logging>
        <log type="coverage-html"
             target="tests/unit/coverage"
             charset="UTF-8"
             highlight="false"
             lowUpperBound="35"
             highLowerBound="70" />
    </logging>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src/</directory>
        </whitelist>
    </filter>
    <testsuite>
        <unit>
            <directory>
                tests/unit
            </directory>
        </unit>
    </testsuite>
</phpunit>
